<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.com.arithmetic.operations.sum.ExerciseAddition">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:id="@+id/textViewExerc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3 + 1 ="
        android:id="@+id/e1"
        android:layout_below="@+id/textViewExerc"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="7 + 3 ="
        android:id="@+id/e2"
        android:layout_below="@+id/r1"
        android:layout_toStartOf="@+id/r1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/r1"
        android:layout_below="@+id/textViewExerc"
        android:layout_toEndOf="@+id/e1"
        android:layout_toStartOf="@+id/textViewExerc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/r2"
        android:layout_alignTop="@+id/e2"
        android:layout_alignStart="@+id/r1"
        android:layout_toStartOf="@+id/textViewExerc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9 + 5 ="
        android:id="@+id/e3"
        android:layout_below="@+id/r2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_alignStart="@+id/r2"
        android:layout_toStartOf="@+id/textViewExerc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtR1"
        android:layout_above="@+id/r2"
        android:layout_toEndOf="@+id/textViewExerc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtR2"
        android:layout_above="@+id/r3"
        android:layout_alignStart="@+id/txtR1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtR3"
        android:layout_alignBottom="@+id/r3"
        android:layout_alignStart="@+id/txtR2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/btnResultExerc"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/r3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
