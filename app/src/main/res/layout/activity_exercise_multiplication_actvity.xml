<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.com.arithmetic.operations.addition.ExerciseAdditionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplication - Exercise"
        android:id="@+id/textViewExerc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9 x 3 ="
        android:id="@+id/ex1"
        android:layout_alignBottom="@+id/r1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/r1"
        android:layout_toEndOf="@+id/ex1"
        android:layout_below="@+id/textViewExerc"
        android:layout_toStartOf="@+id/resul1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/resul1"
        android:layout_toEndOf="@+id/textViewExerc"
        android:layout_alignBottom="@+id/r1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4 x 2 = "
        android:id="@+id/ex2"
        android:layout_toStartOf="@+id/r1"
        android:layout_below="@+id/resul1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/r2"
        android:layout_toEndOf="@+id/ex2"
        android:layout_alignBottom="@+id/resul2"
        android:layout_alignStart="@+id/r1"
        android:layout_alignEnd="@+id/r1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/resul2"
        android:layout_alignBottom="@+id/ex2"
        android:layout_alignStart="@+id/resul1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8 x 2 = "
        android:id="@+id/ex3"
        android:layout_below="@+id/resul2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/r3"
        android:layout_toEndOf="@+id/ex3"
        android:layout_alignBottom="@+id/resul3"
        android:layout_alignEnd="@+id/r2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/resul3"
        android:layout_alignBottom="@+id/ex3"
        android:layout_alignStart="@+id/resul2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/btnResultExerc"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/r3" />

</RelativeLayout>
